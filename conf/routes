# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Public
GET     /                           controllers.Application.index
GET     /logout                     controllers.Application.logout
POST    /login                     	controllers.Application.login
POST	/register					controllers.Application.register
POST    /locale						controllers.Application.changeLang

# Json
GET     /my/games/list				controllers.GamesCtrl.getGamesList
POST    /my/games					controllers.GamesCtrl.saveGame
PUT		/my/games/:gid				controllers.GamesCtrl.updateGame(gid: Int)
DELETE	/my/games/:gid				controllers.GamesCtrl.deleteGame(gid: Int)

# Authenticated
GET     /my/games/new				controllers.GamesCtrl.newgame
GET     /my/games					controllers.GamesCtrl.mygames
GET     /my/games/:gid				controllers.GamesCtrl.gameinfo(gid: Int)
GET     /my/games/:gid/players		controllers.GamesCtrl.gameinfo(gid: Int)
GET     /my/games/:gid/tasks		controllers.GamesCtrl.gameinfo(gid: Int)
GET     /my/games/:gid/skin			controllers.GamesCtrl.gameinfo(gid: Int)
GET     /my/games/:gid/messages		controllers.GamesCtrl.gameinfo(gid: Int)

# Web Api resources
GET     /api                        @controllers.WebApi.root
GET     /api/games                  @controllers.WebApi.games
GET     /api/login                  @controllers.WebApi.login
GET     /api/my/games               @controllers.WebApi.userGames
GET     /api/games/:gid/static      @controllers.WebApi.gameStatic(gid: Int)
GET     /api/games/:gid/dynamic     @controllers.WebApi.gameDynamic(gid: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Additional
GET 	/filldb						controllers.Application.fillDatabase
